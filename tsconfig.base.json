{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@shared/*": [ "app/shared/*"],
      "@core/*": [ "app/core/*"],
      "@store/*": [ "app/store/*"],
      "@app/*": [ "app/*"],
      "@backend/*": [ "app/backend/*"],
      "@environment/*": [ "environments/*"],
      "@pages/*": [ "pages/*"],
      "@generic/*": [ "pages/generic/*"],
      "@mobile/*": [ "pages/mobile/*"],
      "@desktop/*": [ "app/pages/desktop/*"],
      "@layouts/*": [ "app/core/layouts/*"]
    }
  }
}
